                d="M47.5753 50.5338C47.5753 50.5338 42.9025 50.507 39.4148 50.4869C37.4656 50.4757 35.7597 49.1742 35.234 47.2971C34.6802 45.3282 33.6254 43.511 32.1497 42.0353C27.4813 37.367 19.9444 37.3237 15.3294 41.9386C13.8873 43.3808 12.8604 45.1614 12.3235 47.0979C11.7995 49.002 10.0628 50.3176 8.08781 50.3062C4.6082 50.2869 0.00040828 50.2604 0.00040828 50.2604C-0.0358323 43.9516 2.43555 37.9156 6.87094 33.4802C16.101 24.2503 31.1748 24.3369 40.5116 33.6736C44.9982 38.1602 47.5392 44.225 47.5754 50.5338H47.5753Z"
                fill="#E25D1E" />
        </svg>
        <div class="flex flex-col items-start gap-0">
            <span class="font-syne font-bold text-2xl tracking-tighter leading-none text-white">HARISS WEB</span>
            <span class="font-serif italic text-sm text-accent leading-none">Creative Studio</span>
        </div>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center space-x-10">
        <a href="/"
            class="text-xs uppercase tracking-[0.2em] font-medium cursor-hover magnetic {% if page.url == '/' %}text-accent{% else %}text-white hover:text-accent transition-colors{% endif %}"
            data-magnetic-strength="15">Accueil</a>
        <a href="/services/"
            class="text-xs uppercase tracking-[0.2em] font-medium cursor-hover magnetic {% if page.url == '/services/' %}text-accent{% else %}text-white hover:text-accent transition-colors{% endif %}"
            data-magnetic-strength="15">Services</a>
        <a href="/portfolio/"
            class="text-xs uppercase tracking-[0.2em] font-medium cursor-hover magnetic {% if page.url == '/portfolio/' %}text-accent{% else %}text-white hover:text-accent transition-colors{% endif %}"
            data-magnetic-strength="15">Portfolio</a>
        <a href="/contact/"
            class="group relative inline-flex items-center justify-center px-6 py-3 border border-white/20 text-xs font-syne uppercase tracking-wider text-white overflow-hidden cursor-hover magnetic rounded-full hover:border-accent transition-colors duration-500"
            data-magnetic-strength="20">
            <span class="relative z-10 transition-colors group-hover:text-black font-bold">Contacter</span>
            <div
                class="absolute inset-0 bg-accent translate-y-[101%] group-hover:translate-y-[0%] transition-transform duration-500 ease-out z-0">
            </div>
        </a>
    </nav>

    <!-- Mobile Menu Toggle -->
    <button id="mobile-menu-btn" class="md:hidden text-white cursor-hover magnetic" data-magnetic-strength="30"
        aria-label="Ouvrir le menu">
        <span class="text-xs uppercase tracking-[0.2em] font-medium">Menu</span>
    </button>
</header>

<!-- Mobile Nav -->
<div id="mobile-menu"
    class="hidden md:hidden fixed top-0 left-0 w-full h-[100svh] bg-pitch/95 backdrop-blur-3xl z-40 flex flex-col justify-center items-center opacity-0 transition-opacity duration-500">
    <nav class="flex flex-col items-center space-y-8">
        <a href="/"
            class="text-2xl font-syne uppercase tracking-tighter font-bold menu-link {% if page.url == '/' %}text-accent{% else %}text-white hover:text-accent transition-colors{% endif %}">Accueil</a>
        <a href="/services/"
            class="text-2xl font-syne uppercase tracking-tighter font-bold menu-link {% if page.url == '/services/' %}text-accent{% else %}text-gray-400 hover:text-accent transition-colors{% endif %}">Services</a>
        <a href="/portfolio/"
            class="text-2xl font-syne uppercase tracking-tighter font-bold menu-link {% if page.url == '/portfolio/' %}text-accent{% else %}text-gray-400 hover:text-accent transition-colors{% endif %}">Portfolio</a>
        <a href="/contact/"
            class="mt-8 group relative inline-flex items-center justify-center px-8 py-4 border border-white/20 text-sm font-syne uppercase tracking-wider text-white overflow-hidden rounded-full menu-link">
            <span class="relative z-10 transition-colors group-hover:text-black font-bold">Contacter</span>
            <div
                class="absolute inset-0 bg-accent translate-y-[101%] group-hover:translate-y-[0%] transition-transform duration-500 ease-out z-0">
            </div>
        </a>
    </nav>
</div>
