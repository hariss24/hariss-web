                                <div class="{{ 'w-3 h-3 rounded-full bg-white group-hover:bg-white transition-colors' if plan.hover_style == 'accent' else 'w-3 h-3 rounded-full border border-white/30 group-hover:bg-accent group-hover:border-accent transition-colors' }}"></div>
                            </div>
                            <div class="mb-12 md:mb-16">
                                <p class="text-xs md:text-sm font-inter {{ 'opacity-60' if plan.hover_style == 'accent' else 'text-gray-400' }} uppercase tracking-widest mb-4">À
                                    partir de</p>
                                <p
                                    class="font-syne text-5xl md:text-6xl font-bold {{ '' if plan.hover_style == 'accent' else 'text-white' }} tracking-tighter {{ '' if plan.hover_style == 'accent' else 'group-hover:text-accent' }} transition-colors">
                                    {{ plan.price }}<span class="text-2xl md:text-3xl">€</span></p>
                                <p class="mt-4 font-serif italic {{ 'opacity-70' if plan.hover_style == 'accent' else 'text-gray-500' }}">{{ plan.subtitle }}</p>
                            </div>

                            <div class="flex-grow space-y-10">
                                {% for cat in plan.categories %}
                                <div>
                                    <h4
                                        class="font-inter text-xs text-white/50 font-bold uppercase tracking-widest border-b border-white/10 pb-2 mb-6">
                                        {{ cat.cat_name }}</h4>
                                    <ul class="font-inter text-sm {{ 'text-gray-200' if plan.hover_style == 'accent' else 'text-gray-300' }} space-y-4">
                                        {% for item in cat.items %}
                                        {% if item.type == "option" %}
                                        <li class="flex items-start gap-3"><span
                                                class="w-5 h-5 text-gray-500 flex items-center justify-center font-bold text-lg leading-none shrink-0">+</span>
                                            <span class="flex-grow">{{ item.text }}</span> <span
                                                class="text-accent font-bold">{{ item.option_price }}</span>
                                        </li>
                                        {% else %}
                                        <li class="flex items-start gap-3"><svg
                                                class="w-5 h-5 text-green-500 shrink-0 mt-0.5" fill="none"
                                                viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M5 13l4 4L19 7" />
                                            </svg> {{ item.text }}</li>
                                        {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>



                <!-- À la carte options -->
                <div class="container mx-auto px-4 lg:px-8 max-w-[1400px] mt-24 md:mt-32">
                    <div class="text-center md:text-left mb-12">
                        <h3 class="font-syne text-3xl md:text-4xl font-bold text-white mb-4">
                            Options <span class="text-accent italic font-serif">À la carte</span>
                        </h3>
                        <p class="text-gray-400 font-inter max-w-2xl">
                            Personnalisez votre projet avec ces options supplémentaires. Ajoutables à n'importe quel
                            forfait.
                        </p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for option in options %}
                        <div
                            class="border border-white/10 p-6 hover:border-white/30 transition-colors group bg-white/[0.01]">
                            <div class="flex justify-between items-start mb-4">
                                <h4 class="font-syne font-bold text-lg text-white">{{ option.name }}</h4>
                                <span
                                    class="text-accent text-sm font-bold font-inter bg-accent/10 px-3 py-1 rounded-full">{{ option.price }}</span>
                            </div>
                            <p class="text-gray-400 font-inter text-sm">{{ option.description }}</p>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Decorative vertical text -->
                <div
                    class="absolute top-[40%] right-12 hidden md:flex items-center gap-4 origin-right rotate-90 opacity-20 text-white">
                    <span class="text-[1.2rem] uppercase font-bold tracking-[0.4em]">Sur-mesure</span>
                    <div class="w-16 h-[1px] bg-white"></div>
                </div>
            </section>

            <!-- FAQ Section -->
            <section class="py-24 lg:py-32 bg-pitch border-t border-white/10 relative" id="faq">
                <div class="container mx-auto px-4 lg:px-8 max-w-4xl">
                    <div class="text-center md:text-left mb-12 md:mb-16">
                        <h3 class="font-syne text-3xl md:text-4xl font-bold text-white mb-4">
                            Questions <span class="text-accent italic font-serif">Fréquentes</span>
                        </h3>
                        <p class="text-gray-400 font-inter max-w-2xl">
                            Parce que la transparence est la clé d'une collaboration réussie, voici les réponses à vos
                            questions les plus techniques.
                        </p>
                    </div>

                    <div class="space-y-4">
                        {% for item in faq %}
                        <div
                            class="faq-item border border-white/10 bg-white/[0.01] overflow-hidden transition-colors hover:border-white/30">
                            <button
                                class="faq-button w-full flex justify-between items-center p-6 text-left cursor-pointer group"
                                aria-expanded="false">
                                <span
                                    class="font-syne font-bold text-lg text-white group-hover:text-accent transition-colors">{{ item.question }}</span>
                                <span
                                    class="faq-icon text-white/50 text-2xl font-light transform transition-transform duration-300 group-hover:text-accent">+</span>
                            </button>
                            <div
                                class="faq-content h-0 overflow-hidden transition-all duration-300 ease-in-out opacity-0">
                                <div
                                    class="p-6 pt-0 text-gray-400 font-inter text-sm leading-relaxed border-t border-white/5 mt-2">
                                    {{ item.answer }}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Decorative vertical text -->
                <div
                    class="absolute bottom-12 right-12 hidden md:flex items-center gap-4 origin-right rotate-90 opacity-20 text-white">
                    <span class="text-[1.2rem] uppercase font-bold tracking-[0.4em]">Réponses</span>
                    <div class="w-16 h-[1px] bg-white"></div>
                </div>
            </section>

            <section class="py-20 lg:py-28 bg-white/[0.02] border-t border-white/5">
                <div class="container mx-auto px-4 md:px-8 max-w-4xl text-center">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">{{ cta_title }}</h2>
                    <p class="text-lg text-gray-300 mb-8">{{ cta_description }}</p>
                    <a href="contact.html" class="btn-magnetic cursor-hover magnetic pointer-events-auto"
                        data-magnetic-strength="20">{{ cta_button_text }}</a>
                </div>
            </section>
