<!-- Page Header -->
<section
    class="pt-24 pb-12 lg:pt-32 lg:pb-16 flex flex-col justify-center items-center text-center relative grid-lines overflow-hidden w-full bg-pitch">
    <div class="container mx-auto px-4 relative z-10 w-full flex flex-col items-center">
        <h1
            class="font-syne text-6xl md:text-7xl lg:text-8xl font-extrabold text-white leading-tight mb-6 uppercase tracking-tighter">
            <span class="text-gradient">{{ page_title }}</span>
        </h1>
        <p class="font-inter text-lg md:text-xl text-gray-400 max-w-2xl mx-auto">
            {{ page_description }}
        </p>
    </div>

    <!-- Decorative vertical text -->
    <div
        class="absolute top-[100%] right-12 hidden md:flex items-center gap-4 origin-right rotate-90 opacity-20 text-white">
        <span class="text-[1.2rem] uppercase font-bold tracking-[0.4em]">Archive</span>
        <div class="w-16 h-[1px] bg-white"></div>
    </div>
</section>

<!-- Projects Grid Section -->
<section class="container mx-auto px-4 md:px-8 mb-24">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

        {% for project in projects %}
        <a href="{{ project.url }}" target="_blank" class="project-card block">
            <img loading="lazy" src="{{ project.image }}" alt="{{ project.image_alt }}" class="w-full h-72 object-cover">
            <div class="project-overlay">
                <h3 class="text-2xl font-bold text-white mb-2">{{ project.name }}</h3>
                <p class="text-gray-300 text-sm mb-4">{{ project.description }}</p>
                <div>
                    {% for tag in project.tags %}
                    <span class="project-tag">{{ tag }}</span>
                    {% endfor %}
                </div>
            </div>
        </a>
        {% endfor %}

    </div>
</section>
