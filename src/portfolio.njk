---
layout: base.njk
title: Portfolio - Hariss Web
page_title: Portfolio
page_description: Découvrez mes dernières réalisations et projets démo
---

<!-- Page Header -->
<section
    class="pt-24 pb-12 lg:pt-32 lg:pb-16 flex flex-col justify-center items-center text-center relative grid-lines overflow-hidden w-full bg-pitch">
    <div class="container mx-auto px-4 relative z-10 w-full flex flex-col items-center">
        <h1
            class="font-syne text-6xl md:text-7xl lg:text-8xl font-extrabold text-white leading-tight mb-6 uppercase tracking-tighter">
            <span class="text-gradient">{{ page_title }}</span>
        </h1>
        <p class="font-inter text-lg md:text-xl text-gray-400 max-w-2xl mx-auto">
            {{ page_description }}
        </p>
    </div>

    <!-- Decorative vertical text -->
    <div
        class="absolute top-[100%] right-12 hidden md:flex items-center gap-4 origin-right rotate-90 opacity-20 text-white">
        <span class="text-[1.2rem] uppercase font-bold tracking-[0.4em]">Archive</span>
        <div class="w-16 h-[1px] bg-white"></div>
    </div>
</section>

<!-- Projects Slider Section -->
<section class="w-full py-8 pb-12 overflow-hidden relative">
    <div class="w-full overflow-hidden cursor-grab px-8 lg:px-16 select-none active:cursor-grabbing" id="portfolio-slider" data-lenis-prevent>
        <div class="flex flex-nowrap gap-6 relative portfolio-slider-wrapper" id="portfolio-slider-wrapper">
            {% for project in projects.projects %}
            <a href="{{ project.url }}" target="_blank" class="shrink-0 block w-[320px] sm:w-[400px] lg:w-[480px] 2xl:w-[540px] portfolio-slider-slide">
                <div class="project-card block">
                    <img loading="lazy" src="{{ project.image }}" alt="{{ project.image_alt }}" class="w-full h-full object-cover object-top">
                    <div class="project-overlay absolute inset-0 flex flex-col justify-end p-6 md:p-8">
                        <h3 class="text-2xl font-bold text-white mb-2">{{ project.name }}</h3>
                        <p class="text-gray-300 text-sm mb-4">{{ project.description }}</p>
                        <div>
                            {% for tag in project.tags %}
                            <span class="project-tag inline-block px-3 py-1 text-xs font-syne uppercase tracking-widest text-white border border-white/20 bg-white/5 mr-2 mb-2">{{ tag }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
    <!-- Drag hint indicator -->
    <div class="slider-hint text-center pt-6 text-white/30 font-inter text-[0.8rem] tracking-[0.15em] uppercase" id="slider-hint">
        <span>← Glisser pour explorer →</span>
    </div>
</section>
