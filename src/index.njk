<!-- Hero Section -->
            <section
                class="relative min-h-[100svh] flex items-end pb-24 px-6 md:px-12 grid-lines overflow-hidden w-full pt-32">
                <div class="w-full relative z-10 max-w-full">
                    <p
                        class="font-inter text-accent uppercase tracking-[0.3em] text-[10px] md:text-xs font-bold mb-6 md:mb-8 reveal-text">
                        <span class="line block">{{ hero_subtitle }}</span>
                    </p>

                    <h1 class="flex flex-col">
                        <span
                            class="text-[15vw] md:text-[12vw] lg:text-[10vw] font-syne font-bold uppercase tracking-tighter text-white reveal-text block">
                            <span class="line block">{{ hero_line1 }}</span>
                        </span>
                        <span
                            class="text-[12vw] md:text-[10vw] lg:text-[6vw] font-syne font-bold uppercase tracking-tighter text-white reveal-text -mt-1 md:-mt-8 flex flex-row items-center gap-x-3 gap-y-0 lg:gap-8 flex-wrap is-visible">
                            <span class="line block text-surface shrink-0"
                                style="-webkit-text-stroke: 1px rgba(255,255,255,0.8);">votre</span>
                            <span
                                class="line block font-serif italic text-accent normal-case tracking-normal shrink-0">{{ hero_line2 }}</span>
                        </span>
                    </h1>


                    <div
                        class="mt-16 md:mt-24 flex flex-col lg:flex-row justify-between items-start lg:items-end gap-12 w-full">
                        <div class="max-w-md reveal-text">
                            <p class="font-inter text-gray-400 font-light text-base md:text-xl leading-relaxed">
                                <span class="line block">{{ hero_description }}</span>
                            </p>
                        </div>

                        <!-- Magnetic CTA -->
                        <div class="reveal-text">
                            <div class="line">
                                <a href="contact.html" class="btn-magnetic cursor-hover magnetic"
                                    data-magnetic-strength="50">
                                    <span class="relative z-10 flex items-center gap-3">
                                        {{ hero_cta_text }}
                                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                            stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                        </svg>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Decorative Scroll Down indicator -->
                <div
                    class="absolute bottom-12 right-12 hidden md:flex items-center gap-4 origin-right rotate-90 opacity-50">
                    <span class="text-[1.2rem] uppercase font-bold tracking-[0.4em] text-white">Scroll</span>
                    <div class="w-16 h-[1px] bg-white"></div>
                </div>
            </section>

            <!-- Manifesto / About -->
            <section class="py-32 md:py-40 px-6 md:px-12 bg-white text-black relative z-20 overflow-hidden w-full">
                <div class="container mx-auto max-w-6xl">
                    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 md:gap-16">
                        <div class="lg:col-span-4">
                            <p class="text-xs font-bold uppercase tracking-[0.3em] font-inter text-gray-400 mb-4">( LE
                                MANIFESTO )</p>
                            <!-- Rotating badge -->
                            <div class="mt-16 w-48 h-48 relative hidden lg:block">
                                <svg viewBox="0 0 100 100" class="animate-spin-slow w-full h-full">
                                    <path id="circle" d="M 50,50 m -37,0 a 37,37 0 1,1 74,0 a 37,37 0 1,1 -74,0"
                                        fill="transparent" />
                                    <text font-size="8" font-weight="bold" letter-spacing="3.5"
                                        class="uppercase font-inter">
                                        <textPath href="#circle">
                                            Design - Develop - Elevate -
                                        </textPath>
                                    </text>
                                </svg>
                                <div
                                    class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-2 h-2 bg-black rounded-full">
                                </div>
                            </div>
                        </div>
                        <div class="lg:col-span-8">
                            <h2
                                class="font-syne text-4xl md:text-5xl lg:text-7xl font-bold leading-[1.1] tracking-tighter reveal-text">
                                <span class="line block">{{ manifesto_title1 }}</span>
                                <span class="line block text-gray-300">{{ manifesto_title2 }}</span>
                                <span
                                    class="line block font-serif italic font-normal mt-4 md:mt-6 text-black">{{ manifesto_title3 }}</span>
                            </h2>
                            <div class="mt-12 md:mt-16 max-w-2xl reveal-text">
                                <p class="font-inter text-lg md:text-xl text-gray-600 leading-relaxed font-light">
                                    <span class="line inline-block">{{ manifesto_text }}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Decorative vertical text -->
                <div
                    class="absolute top-46 right-12 hidden md:flex items-center gap-4 origin-right rotate-90 opacity-20">
                    <span class="text-[1.2rem] uppercase font-bold tracking-[0.4em] text-black">Vision</span>
                    <div class="w-16 h-[1px] bg-black"></div>
                </div>
            </section>

            <!-- Scrollytelling Methodology (Replaces Portfolio) -->
            <section id="methodology-scroll" class="relative w-full bg-pitch text-white" style="height: 400vh;">
                <!-- Sticky Container -->
                <div class="sticky top-0 h-screen w-full flex items-center overflow-hidden">

                    <!-- Progress Bar (Desktop only, minimal) -->
                    <div
                        class="absolute top-1/2 left-6 md:left-12 transform -translate-y-1/2 w-[2px] h-32 bg-white/10 z-30 hidden md:block">
                        <div id="method-progress"
                            class="w-full bg-accent absolute top-0 left-0 transition-none will-change-[height]"
                            style="height: 0%;"></div>
                    </div>

                    <!-- Track container (Full width to allow horizontal shift) -->
                    <div id="method-track" class="w-max h-full flex items-center will-change-transform"
                        style="transform: translate3d(0,0,0);">

                        {% for step in methodology_steps %}
                        <!-- Step {{ loop.index }} -->
                        <div
                            class="w-screen h-full flex-shrink-0 flex items-center justify-center method-step px-6 md:px-24 {% if not loop.first %}opacity-20{% endif %}">
                            <div class="max-w-3xl w-full method-content transform {% if not loop.first %}scale-[0.8]{% endif %} transition-transform duration-300">
                                <p
                                    class="font-syne text-accent text-xl md:text-2xl mb-4 md:mb-6 uppercase tracking-widest font-bold">
                                    {{ step.number }}. {{ step.label }}</p>
                                <h3
                                    class="font-syne text-4xl md:text-6xl lg:text-7xl font-bold uppercase tracking-tighter mb-6 md:mb-8 leading-none">
                                    {{ step.title_main }} <br><span
                                        class="font-serif italic text-white/50 lowercase tracking-normal">{{ step.title_italic }}</span>
                                </h3>
                                <p
                                    class="font-inter text-base md:text-xl text-gray-400 font-light max-w-xl leading-relaxed">
                                    {{ step.description }}
                                </p>
                            </div>
                        </div>
                        {% endfor %}

                    </div>
                </div>
            </section>
            </section>

            <!-- Pricing / Minimalist Brutalism -->
            <section
                class="py-32 md:py-40 px-6 md:px-12 bg-pitch border-t border-white/10 relative z-10 grid-lines overflow-hidden w-full">
                <div class="container mx-auto max-w-7xl">
                    <div
                        class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 md:mb-24 reveal-text">
                        <h2 class="font-syne text-4xl md:text-7xl font-bold uppercase tracking-tighter text-white">
                            <span class="line block">Forfaits</span>
                        </h2>
                        <p class="text-gray-400 font-inter font-light max-w-sm text-left md:text-right mt-6 md:mt-0">
                            <span class="line block">Des solutions tranchantes.</span>
                            <span class="line block">0% bullshit, 100% performance.</span>
                        </p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-0 border-y border-white/20">

                        {% for plan in pricing %}
                        <div class="group {% if not loop.last %}border-b md:border-b-0 md:border-r{% endif %} border-white/20 p-8 md:p-10 lg:p-16 {% if plan.badge %}hover:bg-accent text-white hover:text-white{% else %}hover:bg-surface{% endif %} transition-colors cursor-hover magnetic-area"
                            data-magnetic-strength="5">
                            <div class="flex justify-between items-center mb-12 md:mb-16">
                                <h3 class="font-syne text-xl md:text-2xl font-bold {% if not plan.badge %}text-white{% endif %} uppercase">{{ plan.name }}{% if plan.badge %} <span
                                        class="text-[9px] md:text-[10px] ml-2 px-2 py-1 border border-current rounded-full">{{ plan.badge }}</span>{% endif %}
                                </h3>
                                <div class="w-3 h-3 rounded-full {% if plan.badge %}bg-white group-hover:bg-white{% else %}border border-white/30 group-hover:bg-accent group-hover:border-accent{% endif %} transition-colors"></div>
                            </div>
                            <div class="mb-12 md:mb-16">
                                <p class="text-xs md:text-sm font-inter {% if plan.badge %}opacity-60{% else %}text-gray-400{% endif %} uppercase tracking-widest mb-4">À
                                    partir de</p>
                                <p
                                    class="font-syne text-5xl md:text-6xl font-bold {% if not plan.badge %}text-white{% endif %} tracking-tighter {% if not plan.badge %}group-hover:text-accent{% endif %} transition-colors">
                                    {{ plan.price }}<span class="text-2xl md:text-3xl">€</span></p>
                                <p class="mt-4 font-serif italic {% if plan.badge %}opacity-70{% else %}text-gray-500{% endif %}">{{ plan.price_subtitle }}</p>
                            </div>
                            <ul class="font-inter text-sm {% if plan.badge %}opacity-90{% else %}text-gray-400{% endif %} space-y-4">
                                {% for feature in plan.features %}
                                <li class="flex items-center gap-3"><span
                                        class="w-1 h-1 bg-{% if plan.badge %}current{% else %}white{% endif %} rounded-full"></span>
                                    {{ feature }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endfor %}

                    </div>

                    <!-- CTA Buttons -->
                    <div class="mt-16 md:mt-24 flex flex-col md:flex-row justify-center items-center gap-6">
                        <a href="services.html"
                            class="group relative inline-flex items-center justify-center px-8 py-[1.25rem] border border-white/20 text-xs md:text-sm font-syne uppercase tracking-wider text-white overflow-hidden rounded-full cursor-hover magnetic hover:border-accent transition-colors duration-500"
                            data-magnetic-strength="50">
                            <span
                                class="relative z-10 transition-colors group-hover:text-black font-bold text-center flex items-center gap-3">
                                Voir en détail les offres et services
                            </span>
                            <div
                                class="absolute inset-0 bg-accent translate-y-[101%] group-hover:translate-y-[0%] transition-transform duration-500 ease-out z-0">
                            </div>
                        </a>
                        <a href="contact.html" class="btn-magnetic cursor-hover magnetic" data-magnetic-strength="50">
                            <span class="relative z-10 flex items-center gap-3">
                                Demander un devis gratuit
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                                    stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </span>
                        </a>

                    </div>
                </div>

                <!-- Decorative vertical text -->
                <div
                    class="absolute top-64 right-12 hidden md:flex items-center gap-4 origin-right rotate-90 opacity-20 text-white">
                    <span class="text-[1.2rem] uppercase font-bold tracking-[0.4em]">Services</span>
                    <div class="w-16 h-[1px] bg-white"></div>
                </div>
            </section>
