# Forcer l'encodage UTF-8 pour les fichiers HTML
AddDefaultCharset UTF-8
AddCharset UTF-8 .html

# Définir "accueil.html" comme page par défaut du dossier
DirectoryIndex accueil.html index.html

# Activer la réécriture d'URL
RewriteEngine On

# Rediriger les URLs avec .html vers celles sans extension (pour éviter le duplicate content)
RewriteCond %{THE_REQUEST} /([^.?]+)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L,NE]

# Servir les fichiers sans extension comme HTML
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]
